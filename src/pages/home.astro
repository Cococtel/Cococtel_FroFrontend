---
import Layout from "../ui/layouts/Layout.astro";
import sweet from "../assets/img/sweet.webp";
import acid from "../assets/img/acid.webp";
import amargo from "../assets/img/amargo.webp";
import exotic from "../assets/img/exotic.webp";
import lemon from "../assets/img/lemon.webp";
import LatestPosts from "../ui/components/LatestPosts.astro";

const categories = [
    { id: 1, name: 'Dulce', image: sweet.src, time: 10 },
    { id: 2, name: 'Acido', image: acid.src, time: 15 },
    { id: 3, name: 'Amargo', image: amargo.src, time: 20 },
    { id: 4, name: 'Exotico', image: exotic.src, time: 25 }
];
---

<Layout>
    <div class="w-full p-4">
        <div class="flex justify-between items-center mb-4">
            <h1 class="text-2xl font-bold mt-3 text-[#eb6b50]">Descubrir</h1>
        </div>
      
        <div class="carousel flex space-x-2 overflow-x-auto whitespace-nowrap scrollbar-hide w-full py-5">
          {categories.map((category, index) => (
            <a
              href={`/category/${category.id}`}
              class="w-24 h-32 flex flex-col items-center bg-[#fef9e4] rounded-xl p-2 flex-shrink-0 shadow-md"
            >
              <img
                src={category.image}
                alt={category.name}
                class="w-16 h-16 rounded-full object-cover"
              />
              <h3 class="text-sm font-semibold mt-2">{category.name}</h3>
              <p class="text-xs text-pink-500">{category.time} cocteles</p>
            </a>
          ))}
        </div>

        <div>
            <div class="flex items-center justify-between mt-10 p-3 rounded-xl bg-[#eb6b50]">
                <h2 class="font-bold text-white">Crea tu Cococtel!</h2>
                <a href="/community" class="text-sm text-[#eb6b50] bg-white rounded-lg p-2">Escánea!</a>
            </div>
            <div class="w-full mt-5 h-64 shadow-xl rounded-xl bg-cover bg-center" style="background-image: url('/path/to/featured-cocktail.jpg');">
                <div class="bg-[#ecece5] w-full h-full rounded-xl p-5 relative overflow-hidden">
                    <img src={lemon.src} alt="" class="absolute right-1/3 top-1/3">
                    <h2 class="text-3xl font-bold text-black mb-2">COCTEL DEL DÍA</h2>
                    <p class="text-black text-sm">¡Prueba nuestro delicioso COCTEL especial de hoy!</p>
                    <div class="flex justify-end mt-4 absolute bottom-5 right-5">
                        <div class="flex items-center">
                            {[...Array(5)].map((_, i) => (
                                <svg
                                    class={`w-5 h-5 ${i < 4 ? 'text-yellow-400' : 'text-gray-300'}`}
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                    xmlns="http://www.w3.org/2000/svg"
                                >
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.97a1 1 0 00.95.69h4.18c.969 0 1.371 1.24.588 1.81l-3.392 2.462a1 1 0 00-.364 1.118l1.286 3.97c.3.921-.755 1.688-1.54 1.118l-3.392-2.462a1 1 0 00-1.176 0l-3.392 2.462c-.784.57-1.84-.197-1.54-1.118l1.286-3.97a1 1 0 00-.364-1.118L2.245 9.397c-.783-.57-.38-1.81.588-1.81h4.18a1 1 0 00.95-.69l1.286-3.97z" />
                                </svg>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <LatestPosts />
    </div>
</Layout>