---
import Sidebar from "../components/Sidebar";
import { Toaster } from 'sonner'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<div class="flex">
			<a href="/profile" class="w-12 h-12 flex items-center justify-center text-2xl text-white rounded-full bg-[#eb6b50] absolute top-5 right-5">T</a>
			<Toaster client:load />
			<Sidebar client:visible />
			<slot />
		</div>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	* {
		font-family: 'Poppins', sans-serif;
	}

	.ProseMirror{
		min-height: 240px;
	}

	.ProseMirror h1{
		font-size: 2rem;
	}

	.ProseMirror h2{
		font-size: 1.7rem;
	}

	.ProseMirror h3{
		font-size: 1.5rem;
	}

	.ProseMirror ul{
		list-style-type: disc;
		margin-left: 20px;
	}

	.ProseMirror ol{
		list-style-type: decimal;
		margin-left: 20px;
	}
</style>
